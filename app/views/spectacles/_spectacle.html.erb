<%# collection_row_cache(spectacle) do %>
<article class="col-sm-12">
<a class="thumbnail" href="<%= spectacle.public_url -%>">
  <%= image_fu(spectacle.thumbnail, "600x400#") if spectacle.thumbnail %>
	<div class="caption">
    <h3><%= spectacle.title %></h3>
  	<% if spectacle.subtitle? %>
  		<div class="spectacle-subtitle">
  			<%= render_html_text(spectacle.subtitle) %>
  		</div>
  	<% end %>
	</div>
</a>
</article>
<div class="clearfix visible-xs-block"></div>
<%# end if spectacle %>